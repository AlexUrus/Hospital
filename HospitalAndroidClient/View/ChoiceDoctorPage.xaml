<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HospitalAndroidClient.View.ChoiceDoctorPage"
             xmlns:viewModel ="clr-namespace:HospitalAndroidClient.ViewModel"
             xmlns:converters="clr-namespace:HospitalLib.Converters;assembly=HospitalLib">
    <ContentPage.BindingContext>
        <viewModel:ChoiceDoctorViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding DoctorsList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="{Binding Name}" FontSize="18"/>
                                <Label Text="{Binding Type }" FontSize="16" TextColor="Gray"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>